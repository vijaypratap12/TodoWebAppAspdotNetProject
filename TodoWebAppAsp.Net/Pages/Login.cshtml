@page
@model TodoWebAppAsp.Net.Pages.LoginModel
@{
}

<style>


.signupForm {
    position:relative;
    top:30%;
    left:30%;
    width: 40%;
    padding: 20px 20px;
    color: white;
    border-radius: 20px;
     box-shadow: rgba(149, 157, 165, 0.2) 0px 8px 24px;
    background-image: url(../Images/signupFormImage.jpg);
    background-position: center;
    background-size: cover;
    margin:150px 0px;
}

label {
    cursor: pointer;
    display: inline-block;
    padding: 3px 6px;
    text-align: right;
    width: 150px;
    vertical-align: top;
}

input {
    text-align: center;
    font-size:inherit;
}



</style>


<body>
<div class="signupForm">
 <form method="POST">

      
            <label for="emailId">Email address</label>
            <input type="email"
                   class="field"
                   id="emailId"
                   name="_Email"
                   placeholder="Enter email"
                   required />

           <br /><br />

            <label for="Password1">Password</label>
            <input type="password"
                   class="field"
                   id="Password1"
                   name="_Password"
                   placeholder="Password"
                   required />

            <br /><br />
               <center><input type="submit" value="Login" class="btn btn-primary" /></center>
        </form>
        </div>
        </body>
